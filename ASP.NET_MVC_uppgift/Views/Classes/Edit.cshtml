@model ASP.NET_MVC_uppgift.Models.EditClassesViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>SchoolClass</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.CurrentClass.Id" />
            <div class="form-group">
                @Html.DropDownListFor(m => m.Teachers, new SelectList(Model.Teachers, "Id", "DisplayName"), "Select a Teacher")
            </div>
            <div class="form-group">
                @Html.DropDownListFor(m => m.Students, new SelectList(Model.Students, "Id", "DisplayName"), "Select a ")
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
